{
  "name": "fit-svg-text",
  "version": "0.1.2",
  "description":
    "The fit-svg-text react component renders, and potentially wraps, text with the maximally possible font size for a container with fixed dimensions.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": ["css", "es", "lib", "umd"],
  "scripts": {
    "build": "nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo",
    "start": "nwb serve-react-demo",
    "test": "nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server",
    "deploy-documentation": "npm run build && gh-pages -d demo/dist"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "emotion": "^9.1.0",
    "gh-pages": "^1.1.0",
    "nwb": "0.21.x",
    "re-resizable": "^4.4.8",
    "react": "^16.3.0",
    "react-container-dimensions": "^1.3.3",
    "react-dom": "^16.3.0",
    "react-emotion": "^9.1.0"
  },
  "author": "Casper Kuijjer",
  "homepage": "http://ckuijjer.github.io/fit-svg-text",
  "license": "MIT",
  "repository": "https://github.com/ckuijjer/fit-svg-text",
  "keywords": ["react-component", "svg"]
}
